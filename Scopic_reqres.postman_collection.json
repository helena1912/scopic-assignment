					"listen": "prerequest",
					"script": {
						"exec": [
							"function getRandomName() {",
							"    const firstNames = [\"John\", \"Jane\", \"Alex\", \"Emily\", \"Michael\", \"Sarah\", \"David\", \"Laura\", \"Chris\", \"Anna\"];",
							"    const lastNames = [\"Smith\", \"Johnson\", \"Brown\", \"Williams\", \"Jones\", \"Miller\", \"Davis\", \"Garcia\", \"Martinez\", \"Hernandez\"];",
							"",
							"    const randomFirstName = firstNames[Math.floor(Math.random() * firstNames.length)];",
							"    const randomLastName = lastNames[Math.floor(Math.random() * lastNames.length)];",
							"",
							"    return randomFirstName + ' '+ randomLastName;",
							"}",
							"",
							"function getRandomJob() {",
							"    const jobs = [",
							"        \"Software Engineer\", \"Data Scientist\", \"Product Manager\", \"Graphic Designer\",",
							"        \"Marketing Specialist\", \"Sales Representative\", \"Financial Analyst\",",
							"        \"Human Resources Manager\", \"Operations Manager\", \"Customer Service Representative\",",
							"        \"Web Developer\", \"Content Writer\", \"Project Manager\", \"IT Support Specialist\"",
							"    ];",
							"",
							"    const randomJob = jobs[Math.floor(Math.random() * jobs.length)];",
							"    return randomJob;",
							"}",
							"",
							"pm.collectionVariables.set(\"updatedName\", getRandomName());",
							"pm.collectionVariables.set(\"updatedJob\", getRandomJob());"
						],
